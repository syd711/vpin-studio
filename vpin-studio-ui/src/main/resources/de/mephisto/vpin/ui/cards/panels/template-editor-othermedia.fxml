<TitledPane fx:id="settingsPane" stylesheets="@../../stylesheet.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.mephisto.vpin.ui.cards.panels.LayerEditorOtherMediaController">
  <graphic>
      <BorderPane prefWidth="250.0">
         <left>
            <Label text="Other Media Settings" />
         </left>
         <right>
            <HBox alignment="CENTER_RIGHT" spacing="3.0">
               <children>
                  <Button fx:id="eyeBtn" mnemonicParsing="false" >
                     <font>
                        <Font size="10.0" />
                     </font>
                     <graphic>
                        <FontIcon iconColor="WHITE" iconLiteral="mdi2e-eye-outline" />
                     </graphic>
                     <tooltip>
                        <Tooltip text="Toggle other media visibility" />
                     </tooltip>
                  </Button>
                  <Button fx:id="lockBtn" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#onLockToggle">
                     <font>
                        <Font size="10.0" />
                     </font>
                     <graphic>
                        <FontIcon iconColor="WHITE" iconLiteral="mdi2l-lock-open-variant-outline" />
                     </graphic>
                     <tooltip>
                        <Tooltip text="Toggle protection for card mode" />
                     </tooltip>
                  </Button>
               </children>
            </HBox>
         </right>
      </BorderPane>
  </graphic>
  <content>
      <ScrollPane hbarPolicy="NEVER">
         <content>
            <VBox styleClass="accordion-container" >
               <children>

                  <Label text="Add an additional layer containing a media asset." prefWidth="200" wrapText="true">
                     <graphic>
                        <FontIcon iconColor="WHITE" iconLiteral="mdi2h-help-circle-outline" iconSize="18" wrappingWidth="22.4" />
                     </graphic>
                     <VBox.margin>
                        <Insets top="6.0" />
                     </VBox.margin>
                  </Label>

                  <HBox alignment="CENTER_LEFT" spacing="6.0">
                     <children>
                        <Label text="Media Asset" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <Label>
                           <font>
                              <Font size="14.0" />
                           </font>
                           <graphic>
                              <FontIcon iconColor="WHITE" iconLiteral="mdi2h-help-circle-outline" iconSize="18" text="ó°˜¥" />
                           </graphic>
                           <tooltip>
                              <Tooltip prefWidth="300.0" text="Select the displayed media asset." wrapText="true" />
                           </tooltip>
                        </Label>
                     </children>
                     <VBox.margin>
                        <Insets top="12.0" />
                     </VBox.margin>
                  </HBox>
                  <ComboBox fx:id="otherMediaScreensComboBox" prefWidth="150.0" >
                     <VBox.margin>
                        <Insets top="6.0" bottom="12.0" />
                     </VBox.margin>
                  </ComboBox>

                  <fx:include fx:id="position" source="template-subeditor-position.fxml" />

                  <!--HBox alignment="BASELINE_LEFT" spacing="6.0">
                     <children>
                        <CheckBox fx:id="otherMediaKeepARCheckBox" mnemonicParsing="false" text="Keep Aspect Ratio" textFill="WHITE">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </CheckBox>
                        <Label>
                           <graphic>
                              <FontIcon iconColor="WHITE" iconLiteral="mdi2h-help-circle-outline" iconSize="18" />
                           </graphic>
                           <tooltip>
                              <Tooltip text="When checked, the aspect ratio of the image is maintained during resize." />
                           </tooltip>
                        </Label>
                     </children>
                     <VBox.margin>
                        <Insets top="12.0" />
                     </VBox.margin>
                  </HBox-->

               </children>
               <padding>
                  <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>
  </content>
</TitledPane>
