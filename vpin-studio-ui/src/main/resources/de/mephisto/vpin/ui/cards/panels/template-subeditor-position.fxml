<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox stylesheets="@../../stylesheet.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.mephisto.vpin.ui.cards.panels.LayerSubEditorPositionController">
   <children>
      <HBox spacing="12.0">
         <children>
            <VBox>
               <children>
                  <Label text="Position X" textFill="WHITE">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <Spinner editable="true" prefWidth="110.0" styleClass="widget-default" fx:id="xSpinner" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label text="Position Y" textFill="WHITE">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <Spinner fx:id="ySpinner" editable="true" prefWidth="110.0" styleClass="widget-default" />
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox spacing="12.0">
         <children>
            <VBox>
               <children>
                  <Label text="Width" textFill="WHITE">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <Spinner fx:id="widthSpinner" editable="true" prefWidth="110.0" styleClass="widget-default" />
               </children>
            </VBox>
            <VBox layoutX="10.0" layoutY="10.0">
               <children>
                  <Label text="Height" textFill="WHITE">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <Spinner fx:id="heightSpinner" editable="true" prefWidth="110.0" styleClass="widget-default" />
               </children>
            </VBox>
         </children>
         <VBox.margin>
            <Insets top="3.0" />
         </VBox.margin>
      </HBox>
</children>
</VBox>
