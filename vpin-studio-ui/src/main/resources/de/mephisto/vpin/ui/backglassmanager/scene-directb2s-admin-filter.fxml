<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox fx:id="filterRoot" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="200.0" minWidth="-Infinity" prefWidth="250.0" stylesheets="@../stylesheet.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.mephisto.vpin.ui.backglassmanager.BackglassManagerFilterController">
   <children>
      <VBox>
         <children>
            <BorderPane>
               <left>
                  <HBox alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
                     <children>
                        <Hyperlink onAction="#onReset" text="Reset All">
                           <HBox.margin>
                              <Insets left="-5.0" top="-9.0" />
                           </HBox.margin>
                        </Hyperlink>
                     </children>
                     <BorderPane.margin>
                        <Insets top="7.0" />
                     </BorderPane.margin>
                  </HBox>
               </left>
               <right>
                  <Button mnemonicParsing="false" onAction="#toggle" BorderPane.alignment="CENTER">
                     <graphic>
                        <FontIcon iconColor="WHITE" iconLiteral="mdi2w-window-close" iconSize="12" />
                     </graphic>
                  </Button>
               </right>
               <VBox.margin>
                  <Insets bottom="12.0" />
               </VBox.margin>
            </BorderPane>
         </children>
      </VBox>
      <ScrollPane hbarPolicy="NEVER">
         <content>
            <VBox fx:id="titlePaneRoot" prefWidth="230.0">
               <children>

                  <Label styleClass="default-title" text="Emulator Filters">
                     <VBox.margin>
                        <Insets top="3.0" />
                     </VBox.margin>
                  </Label>
                  <VBox fx:id="emulatorFilters">
                     <children>      
                     </children>
                  </VBox>
                  
                 <Label styleClass="default-title" text="Backglass Filters">
                     <VBox.margin>
                        <Insets bottom="12.0" top="24.0" />
                     </VBox.margin>
                  </Label>

                  <VBox fx:id="backglassFilters" spacing="6.0">
                     <children>
                        <CheckBox fx:id="missingDMDImageCheckBox" mnemonicParsing="false" styleClass="default-text" text="Missing DMD Image" />
                        <CheckBox fx:id="notFullDMDRatioCheckBox" mnemonicParsing="false" styleClass="default-text" text="DMD Aspect Ratio not full DMD" />
                        <CheckBox fx:id="scoresAvailableCheckBox" mnemonicParsing="false" styleClass="default-text" text="Presence of Score Element" />
                        <CheckBox fx:id="missingTableCheckBox" mnemonicParsing="false" styleClass="default-text" text="Backglass without Table" />
                     </children>
                  </VBox>

                  <Label styleClass="default-title" text="Settings Filters">
                     <VBox.margin>
                        <Insets bottom="12.0" top="24.0" />
                     </VBox.margin>
                  </Label>

                  <VBox fx:id="settingFilters" spacing="6.0">
                     <children>

                        <Label styleClass="default-text" text="Grill Visibility" />
                        <ComboBox fx:id="grillVisibilityComboBox" prefWidth="150.0" />
                        <CheckBox fx:id="backglassVisibilityCheckBox" layoutX="10.0" layoutY="78.0" mnemonicParsing="false" styleClass="default-text" text="Backglass Hidden" />

                        <CheckBox fx:id="b2sdmdVisibilityCheckBox" mnemonicParsing="false" styleClass="default-text" text="B2S DMD Hidden" />

                        <Label styleClass="default-text" text="DMD Visibility" />
                        <ComboBox fx:id="dmdVisibilityComboBox" prefWidth="150.0" />

                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="24.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>
   </children>
   <styleClass>
      <String fx:value="base-component" />
      <String fx:value="filter-component" />
   </styleClass>
   <padding>
      <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
   </padding>
</VBox>
