<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<HBox fx:id="root" spacing="2.0" stylesheets="@../../stylesheet.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.mephisto.vpin.ui.tables.panels.PlayButtonController">
   <children>
      <ComboBox fx:id="launchCombo" prefWidth="210.0" styleClass="external-component" />
      <Button fx:id="launchBtn" mnemonicParsing="false" onAction="#onPlay" styleClass="external-component" textFill="WHITE">
         <graphic>
              <FontIcon iconColor="WHITE" iconLiteral="mdi2p-play" iconSize="18" />
         </graphic>
         <tooltip>
              <Tooltip text="Launch the table with the selected emulator" />
         </tooltip>
         <font>
            <Font size="14.0" />
         </font>
      </Button>
   </children>
</HBox>
