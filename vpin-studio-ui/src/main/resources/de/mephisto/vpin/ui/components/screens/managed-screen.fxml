<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="root" styleClass="accordion-container" stylesheets="@../../stylesheet.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.mephisto.vpin.ui.components.screens.ManagedScreenController">
   <padding>
      <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
   </padding>
   <center>
      <ScrollPane BorderPane.alignment="CENTER">
         <content>
            <Pane fx:id="previewCanvas" minHeight="300.0" minWidth="300.0" styleClass="media-container" />
         </content>
      </ScrollPane>
   </center>
   <top>
      <VBox prefHeight="150.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="12.0" right="12.0" />
         </BorderPane.margin>
         <children>
            <Label styleClass="default-title" text="Screens Overview" />
         </children>
      </VBox>
   </top>
</BorderPane>
