                                       </graphic>
                                       <font>
                                          <Font size="14.0" />
                                       </font>
                                       <items>
                                          <MenuItem fx:id="screenDeleteBtn" mnemonicParsing="false" onAction="#onScreenDelete" text="Delete Screen Assets">
                                             <graphic>
                                                <FontIcon iconColor="#ff3333" iconLiteral="mdi2d-delete-outline" iconSize="18" />
