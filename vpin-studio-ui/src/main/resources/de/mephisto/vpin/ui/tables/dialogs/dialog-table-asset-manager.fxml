                                          <Font size="14.0" />
                                       </font>
                                       <graphic>
                                          <FontIcon iconColor="WHITE" iconLiteral="mdi2m-music-note-plus" iconSize="18" />
                                       </graphic>
                                       <tooltip>
                                          <Tooltip prefWidth="350.0" text="Adds a blank media so that the default sound is not played." wrapText="true" />
