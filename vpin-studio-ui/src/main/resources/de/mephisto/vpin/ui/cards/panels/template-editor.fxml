<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane prefHeight="900.0" prefWidth="1400.0" styleClass="base-component" stylesheets="@../../stylesheet.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.mephisto.vpin.ui.cards.panels.TemplateEditorController">
   <right>
      <VBox styleClass="subpanel" BorderPane.alignment="CENTER">
         <children>
            <Accordion fx:id="accordion">
               <panes>
                  <fx:include fx:id="layerEditorOverlay" source="template-editor-overlay.fxml" />
                  <fx:include fx:id="layerEditorBackground" source="template-editor-background.fxml" />
                  <fx:include fx:id="layerEditorLayout" source="template-editor-layout.fxml" />
                  <fx:include fx:id="layerEditorCanvas" source="template-editor-canvas.fxml" />
                  <fx:include fx:id="layerEditorWheel" source="template-editor-wheel.fxml" />
                  <fx:include fx:id="layerEditorTitle" source="template-editor-title.fxml" />
                  <fx:include fx:id="layerEditorTableName" source="template-editor-tablename.fxml" />
                  <fx:include fx:id="layerEditorScores" source="template-editor-scores.fxml" />
               </panes>
            </Accordion>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </VBox>
   </right>
   <top>
      <ToolBar BorderPane.alignment="CENTER">
         <items>
            <Label text="Template:" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <padding>
                  <Insets right="6.0" />
               </padding>
            </Label>
            <ComboBox fx:id="templateCombo" prefHeight="30.0" prefWidth="222.0" />
            <Separator layoutX="665.0" layoutY="10.0" orientation="VERTICAL" prefHeight="0.0" prefWidth="12.0" />
            <Button fx:id="createBtn" mnemonicParsing="false" onAction="#onCreate" textFill="WHITE">
               <font>
                  <Font size="14.0" />
               </font>
               <tooltip>
                  <Tooltip text="Create New Template" />
               </tooltip>
               <graphic>
                  <FontIcon iconColor="WHITE" iconLiteral="mdi2p-plus-circle-outline" iconSize="18" />
               </graphic>
            </Button>
            <Button fx:id="renameBtn" mnemonicParsing="false" onAction="#onRename" textFill="WHITE">
               <font>
                  <Font size="14.0" />
               </font>
               <graphic>
                  <FontIcon iconColor="WHITE" iconLiteral="mdi2l-lead-pencil" iconSize="18" />
               </graphic>
               <tooltip>
                  <Tooltip text="Rename the selected template" />
               </tooltip>
            </Button>
            <Button fx:id="deleteBtn" mnemonicParsing="false" onAction="#onDelete" textFill="#ff3333">
               <font>
                  <Font size="14.0" />
               </font>
               <graphic>
                  <FontIcon iconColor="#ff3333" iconLiteral="mdi2d-delete-outline" />
               </graphic>
            </Button>
            <Separator layoutX="485.0" layoutY="10.0" orientation="VERTICAL" prefHeight="0.0" prefWidth="12.0" />
            <Button fx:id="openImageBtn" mnemonicParsing="false" onAction="#onOpenImage" textFill="WHITE">
               <font>
                  <Font size="14.0" />
               </font>
               <graphic>
                  <FontIcon iconColor="WHITE" iconLiteral="mdi2e-eye" iconSize="18" />
               </graphic>
               <tooltip>
                  <Tooltip text="Display the image of the card as it would be saved upon generation." />
               </tooltip>
            </Button>
            <Separator layoutX="307.0" layoutY="10.0" orientation="VERTICAL" prefHeight="0.0" prefWidth="12.0" />
            <Button fx:id="generateBtn" layoutX="565.0" layoutY="11.0" mnemonicParsing="false" onAction="#onGenerate" textFill="WHITE">
               <font>
                  <Font size="14.0" />
               </font>
               <graphic>
                  <FontIcon iconColor="WHITE" iconLiteral="bi-image" iconSize="18" />
               </graphic>
               <tooltip>
                  <Tooltip text="Generate Card" />
               </tooltip>
            </Button>
            <Button fx:id="generateAllBtn" mnemonicParsing="false" onAction="#onGenerateAll" text=" Generate All" textFill="WHITE">
               <font>
                  <Font size="14.0" />
               </font>
               <graphic>
                  <FontIcon iconColor="WHITE" iconLiteral="bi-images" iconSize="18" />
               </graphic>
            </Button>
            <Separator orientation="VERTICAL" prefHeight="0.0" prefWidth="12.0" />
            <Button fx:id="folderBtn" mnemonicParsing="false" onAction="#onFolderBtn" styleClass="folder-component" textFill="WHITE">
               <font>
                  <Font size="14.0" />
               </font>
               <graphic>
                  <FontIcon iconColor="WHITE" iconLiteral="mdi2f-folder-open" iconSize="18" />
               </graphic>
               <tooltip>
                  <Tooltip text="Open [Frontend] system folder for the target folder." />
               </tooltip>
            </Button>
            <HBox fx:id="mediaPlayerControl" spacing="6.0">
               <children>
                  <Separator orientation="VERTICAL" prefHeight="0.0" prefWidth="12.0" />
                  <Button mnemonicParsing="false" onAction="#onStart" styleClass="external-component" textFill="#ff3333">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <graphic>
                        <FontIcon iconColor="WHITE" iconLiteral="mdi2p-play" iconSize="18" />
                     </graphic>
                     <tooltip>
                        <Tooltip text="Run the overlay animation (if it is a video)." />
                     </tooltip>
                  </Button>
                  <Button fx:id="stopBtn" mnemonicParsing="false" onAction="#onStop" textFill="#ff3333">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <graphic>
                        <FontIcon iconColor="#ff3333" iconLiteral="mdi2s-stop" iconSize="18" />
                     </graphic>
                     <tooltip>
                        <Tooltip text="Stop the overlay animation." />
                     </tooltip>
                  </Button>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label fx:id="resolutionLabel1" layoutX="10.0" layoutY="15.0" text="Card Resolution: ">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <padding>
                        <Insets left="6.0" />
                     </padding>
                  </Label>
                  <Label fx:id="resolutionLabel" text="Resolution">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <padding>
                        <Insets left="6.0" />
                     </padding>
                  </Label>
               </children>
            </HBox>
         </items>
      </ToolBar>
   </top>
   <center>
      <StackPane fx:id="previewStack" styleClass="media-container" BorderPane.alignment="CENTER">
         <children>
            <BorderPane fx:id="previewOverlayPanel" />
            <Pane fx:id="previewPanel">
               <children>
               </children>
            </Pane>
         </children>
      </StackPane>
   </center>
</BorderPane>
